html
	head
		link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css")
	body
		block header
			header.navbar.navbar-expand-lg.navbar-dark.bg-dark
				a.navbar-brand(href='../')
					img(src="/images/logo.png", width="30", height="30")
				a.nav-link(href="../", class="text-white") Home
				a.nav-link(href='../users', class="text-white") Users
				button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarColor01', aria-controls='navbarColor01', aria-expanded='false', aria-label='Toggle navigation')
					span.navbar-toggler-icon#navbarColor01.collapse.navbar-collapse
				ul.navbar-nav.mr-auto
				form.form-inline(action='/users/search', method='GET')
					input#searchItem.form-control.mr-sm-2(name='q', type='text', placeholder='Search', aria-label='Search')
					button.btn.btn-outline-info.my-2.my-sm-0(type='submit') Search
		block content